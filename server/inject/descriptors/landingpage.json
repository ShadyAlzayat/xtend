{
  "type": "object",
  "properties": {
    "clickmenu": {
      "type": "action",
      "selector": ".dropdown-toggle",
      "control": "action.link"
    },
    "clickinfo": {
      "type": "action",
      "selector": "#infoCenter",
      "control": "action.link"
    },
    "clickbatch": {
      "type": "action",
      "selector": "a",
      "control": "action.link"
    },
    "ismenu": {
      "type": "identifier",
      "selector": "h1",
      "control": "exists",
      "selectContains": "Select your application"
    },
    "isinfo": {
      "type": "identifier",
      "selector": "#infoCenter",
      "control": "exists",
      "selectContains": "Info Center"
    }
  },
  "connect": [
    {
      "match": [
        "ismenu"
      ],
      "action": "clickmenu"
    }
  ]
}
